<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Model"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:id="@+id/layout_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tv_icon"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Icon:"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/tv_icon"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_default_model_icon"
            android:background="@drawable/rippler_blue_white"
            />
    </RelativeLayout>


    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="model name"
        android:background="@drawable/bg_edit_classic"
        android:layout_below="@id/layout_icon"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext"
        android:text="Cancel"
        android:layout_toLeftOf="@id/btn_ok"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:layout_marginRight="5dp"
        />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext"
        android:text="OK"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:inputType="text"
        />

</RelativeLayout>